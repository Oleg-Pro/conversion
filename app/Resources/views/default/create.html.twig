{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                <h5>Add Client</h5>

                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <form action="{{ path('client_create') }}" method="post" id="create-form" class="form-horizontal">
                    {{ form_rest(form) }}

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary btn-sm">
                            <i class="fa fa-plus"></i> Create
                        </button>
                        <a href="{{ app.request.headers.get('referer') }}" class="btn btn-default btn-sm">
                            <i class="fa fa-ban"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
